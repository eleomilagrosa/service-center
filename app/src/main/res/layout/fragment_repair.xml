<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_title"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:textColor="#71a4fd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repair Status"
            android:textSize="@dimen/fs_medium"/>
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/sp_repair_status"
            android:layout_below="@+id/tv_title"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/repair_status"
            android:textSize="@dimen/fs_small"
            android:textColor="#585757"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"/>
        <EditText
            android:padding="4dp"
            android:gravity="start|top"
            android:layout_above="@+id/ll_footer"
            android:id="@+id/et_repair_note"
            android:layout_below="@+id/sp_repair_status"
            android:layout_margin="4dp"
            android:background="@drawable/editext_black_outline"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/ll_footer"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Back"
                android:background="@drawable/login_connect_button_selector"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"/>
            <Button
                android:id="@+id/btn_next"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Next Step"
                android:background="@drawable/login_connect_button_selector"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>