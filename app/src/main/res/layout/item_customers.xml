<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:id="@+id/ll_2"
            android:layout_below="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer : "
                android:textSize="@dimen/fs_xsmall"/>

            <TextView
                android:id="@+id/tv_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:text="Dela Cruz, Juan"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fs_xsmall" />
        </LinearLayout>

        <LinearLayout
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:id="@+id/ll_3"
            android:layout_below="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile #: "
                android:textSize="@dimen/fs_xsmall"/>
            <TextView
                android:id="@+id/tv_mobile_number"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09123412"
                android:textSize="@dimen/fs_xsmall"/>
        </LinearLayout>
        <LinearLayout
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:id="@+id/ll_4"
            android:layout_below="@+id/ll_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email : "
                android:textSize="@dimen/fs_xsmall"/>
            <TextView
                android:id="@+id/tv_email"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="model"
                android:textSize="@dimen/fs_xsmall"/>
        </LinearLayout>

        <LinearLayout
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:id="@+id/ll_5"
            android:layout_below="@+id/ll_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address : "
                android:textSize="@dimen/fs_xsmall"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textSize="@dimen/fs_xsmall"/>

        </LinearLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_below="@+id/ll_5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black_85"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignTop="@+id/rl_height"
        android:layout_alignBottom="@+id/rl_height"
        android:id="@+id/rl_options"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
        <RelativeLayout
            android:id="@+id/rl_view"
            android:background="#9c000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:background="@drawable/btn_transaparent_bg"
                android:padding="8dp"
                android:layout_centerInParent="true"
                android:id="@+id/btn_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="View"
                android:textSize="@dimen/fs_medium"
                android:gravity="center"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_edit"
            android:background="#9c000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:background="@drawable/btn_transaparent_bg"
                android:padding="8dp"
                android:layout_centerInParent="true"
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/fs_medium"
                android:gravity="center"
                android:text="Edit"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>