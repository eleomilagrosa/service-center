<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">
        <ScrollView
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Order Summary"
                    android:textSize="@dimen/fs_medium"/>

                <LinearLayout
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Order # : "
                        android:textSize="@dimen/fs_small"/>
                    <TextView
                        android:id="@+id/tv_job_order_number"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/fs_small"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer Name : "
                        android:textSize="@dimen/fs_small"/>
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fs_small"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number : "
                        android:textSize="@dimen/fs_small"/>
                    <TextView
                        android:id="@+id/tv_mobile_number"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fs_small"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email : "
                        android:textSize="@dimen/fs_small"/>
                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fs_small"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unit : "
                        android:textSize="@dimen/fs_small"/>
                    <TextView
                        android:id="@+id/tv_unit"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fs_small"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date of Purchase : "
                        android:textSize="@dimen/fs_small"/>
                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fs_small"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dealer : "
                        android:textSize="@dimen/fs_small"/>
                    <TextView
                        android:id="@+id/tv_dealer"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fs_small"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Serial : "
                        android:textSize="@dimen/fs_small"/>
                    <TextView
                        android:id="@+id/tv_serial"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fs_small"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Model : "
                        android:textSize="@dimen/fs_small"/>
                    <TextView
                        android:id="@+id/tv_model"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fs_small"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Warranty : "
                        android:textSize="@dimen/fs_small"/>
                    <TextView
                        android:id="@+id/tv_warranty"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fs_small"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Complaint : "
                        android:textSize="@dimen/fs_small"/>
                    <TextView
                        android:id="@+id/tv_complaint"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fs_small"/>
                </LinearLayout>

                <LinearLayout
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status : "
                        android:textSize="@dimen/fs_small"/>
                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textSize="@dimen/fs_small"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Repair Status : "
                        android:textSize="@dimen/fs_small"/>
                    <TextView
                        android:id="@+id/tv_repair_status"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textSize="@dimen/fs_small"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diagnosis : "
                        android:textSize="@dimen/fs_small"/>
                    <TextView
                        android:id="@+id/tv_diagnosis"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textSize="@dimen/fs_small"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shipping : "
                        android:textSize="@dimen/fs_small"/>
                    <TextView
                        android:id="@+id/tv_shipping"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textSize="@dimen/fs_small"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="8dp"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_show_images"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/show_attached_images"
                        android:textSize="@dimen/fs_small"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_print"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Print Job Order ID"
                    android:background="@drawable/login_connect_button_selector"
                    android:textColor="@android:color/white"
                    android:layout_margin="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Back"
                        android:background="@drawable/login_connect_button_selector"
                        android:textColor="@android:color/white"
                        android:layout_margin="8dp"/>
                    <Button
                        android:id="@+id/btn_save"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:background="@drawable/login_connect_button_selector"
                        android:textColor="@android:color/white"
                        android:layout_margin="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</ScrollView>